<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"/>

            <ImageView
                android:id="@+id/head"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/headico1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入你的真实姓名"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入你的身份证号码"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:digits="0123456789Xx"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="身份证签发日期"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <TextView
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择身份证签发日期"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:digits="0123456789Xx"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"
                android:drawableRight="@mipmap/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="身份证到期日期"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <TextView
                android:id="@+id/end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择身份证到期日期"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:digits="0123456789Xx"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"
                android:drawableRight="@mipmap/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="户籍地址"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入户籍地址"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传身份证照片"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">
            <ImageView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/addpic"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_25"
                android:src="@drawable/addpic"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入你的手机号码"
                android:inputType="phone"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:hint="请输入短信验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:textColorHint="#A2A2A2"
                android:inputType="number"/>
            <TextView
                android:id="@+id/get_yzm"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发送验证码"
                android:textSize="@dimen/sp_14"
                android:textColor="#262626"
                android:layout_marginRight="@dimen/common_margin"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/bank_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入你的银行借记卡号"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:inputType="number"
                android:layout_marginRight="@dimen/dp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#DBDBDB" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="设置交易密码"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入6位数字密码"
                android:inputType="numberPassword"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"
                android:maxLength="6"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请再次输入密码"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:inputType="numberPassword"
                android:layout_marginRight="@dimen/dp_12"
                android:maxLength="6" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#DBDBDB" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择性别"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"
                android:drawableRight="@mipmap/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:text="职业"
                android:textSize="@dimen/sp_14"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/common_margin"/>
            <TextView
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择职业"
                android:textSize="@dimen/sp_12"
                android:textColorHint="#A1A1A1"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_12"
                android:drawableRight="@mipmap/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#DBDBDB"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/dp_12"/>


    </LinearLayout>

    <Button
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/circle_red_btn"
        android:text="立即开通"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_30"/>
</LinearLayout>

</ScrollView>