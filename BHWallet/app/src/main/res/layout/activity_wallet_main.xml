<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/money1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总余额(元)"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_35"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="金融服务"
                    android:layout_marginLeft="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/finance_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="更多"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#707070"
                    android:drawableRight="@mipmap/arrow"
                    android:layout_marginRight="@dimen/sp_14"
                    android:drawablePadding="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tjb1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tianjinbao_icon"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginRight="@dimen/dp_7"/>

                <ImageView
                    android:id="@+id/save1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhongzhicun_icon"
                    android:layout_marginRight="@dimen/common_margin"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您尚未开通钱包"
                android:textSize="@dimen/sp_16"
                android:textColor="#6F6F6F"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_175"/>

            <TextView
                android:id="@+id/open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="去开通"
                android:background="@drawable/circle_red_btn"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_32"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_open"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30">
                        <TextView
                            android:id="@+id/money2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00元"
                            android:textSize="@dimen/sp_40"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:id="@+id/eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/money2"
                            android:src="@mipmap/eye_open_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"/>

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总余额(元)"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/rl_money"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账户份额"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13"/>
                            <TextView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_5"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_30"
                            android:background="#FFFFFF"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可用余额"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13"/>
                            <TextView
                                android:id="@+id/eacAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥0"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_5"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_30"
                            android:background="#FFFFFF"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="冻结金额"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13"/>
                            <TextView
                                android:id="@+id/freezeAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥0"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_5"/>
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_30"
                            android:background="#FFFFFF"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待结算金额"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_13"/>
                            <TextView
                                android:id="@+id/settAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥0"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_5"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pay_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pay_in_icon"
                    android:layout_marginLeft="@dimen/common_margin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:drawableRight="@mipmap/arrow"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_11"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_line"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_11"/>
            <LinearLayout
                android:id="@+id/pay_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pay_out_icon"
                    android:layout_marginLeft="@dimen/common_margin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提现"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:drawableRight="@mipmap/arrow"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_11"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="金融服务"
                    android:layout_marginLeft="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/finance_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="更多"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#707070"
                    android:drawableRight="@mipmap/arrow"
                    android:layout_marginRight="@dimen/sp_14"
                    android:drawablePadding="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tjb2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tianjinbao_icon"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginRight="@dimen/dp_7"/>

                <ImageView
                    android:id="@+id/save2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhongzhicun_icon"
                    android:layout_marginRight="@dimen/common_margin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="钱包管理"
                    android:layout_marginLeft="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/wallet_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="渤金钱包编号"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#707070"
                    android:drawableRight="@mipmap/arrow"
                    android:layout_marginRight="@dimen/sp_14"
                    android:drawablePadding="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/card_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/bank_card_icon"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行卡管理"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pay_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pay_manage_icon"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付管理"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/change_tel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/change_phone_icon"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="变更手机号"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/write_off"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/close_account_icon"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户注销"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_25"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/kefu_icon"
                    android:layout_marginLeft="@dimen/dp_17"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系银行客服"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="95541"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#6F6F6F"
                    android:layout_marginRight="@dimen/dp_22"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_line"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_11"/>
            <LinearLayout
                android:id="@+id/ll_question"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/question_icon"
                    android:layout_marginLeft="@dimen/dp_17"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钱包常见问题"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_12"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bank_logo"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_30"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
