<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_13">
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_1"
            android:background="#707070"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择日期"
            android:textSize="@dimen/sp_17"
            android:textColor="#262626"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_1"
            android:background="#707070"/>
    </LinearLayout>
    <LinearLayout
        android:id="@id/wheel_id_picker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/wheel_picker_padding_left"
        android:paddingTop="@dimen/wheel_picker_padding_top"
        android:paddingEnd="@dimen/wheel_picker_padding_right"
        android:paddingBottom="@dimen/wheel_picker_padding_bottom" />

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_250"
        android:text="完成"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/circle_red_btn"/>
</LinearLayout>
