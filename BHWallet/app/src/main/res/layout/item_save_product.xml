<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/white_soild_radus_4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周周存2.0"
                android:textSize="@dimen/sp_12"
                android:textColor="#282828"
                android:layout_marginLeft="@dimen/dp_13"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="#D2D2D2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.35%或2.40%或2.65%"
                android:textColor="#C5261D"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"/>

            <TextView
                android:id="@+id/buy"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_19"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/red_soild_radus_4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="购买"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buy"
                android:text="7天"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20">
            <TextView
                android:id="@+id/rate_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年化收益率"
                android:textColor="#8B8888"
                android:textSize="@dimen/sp_11"
                android:layout_marginLeft="@dimen/dp_13"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_19">
                <TextView
                    android:id="@+id/least_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#8B8888"
                    android:text="1万元起"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="@dimen/sp_11"
                    android:textColor="#8B8888"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#8B8888"
                    android:text="人民币"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
